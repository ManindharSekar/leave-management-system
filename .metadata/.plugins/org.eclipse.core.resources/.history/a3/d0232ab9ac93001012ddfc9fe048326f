  <script>
    // Small helpers: update URL/time and implement actions.
    (function(){
      // Put the real URL in the page (best effort)
      try { document.getElementById('url').textContent = window.location.pathname + (window.location.search || ''); } catch(e){}
      const t = new Date();
      document.getElementById('time').textContent = t.toLocaleString();

      // Buttons
      window.goHome = function(){
        // change '/' to your site's home path if different
        window.location.href = '/';
      };
      window.goBack = function(){
        if (history.length > 1) history.back(); else window.location.href = '/';
      };
      window.reportIssue = function(){
        const subject = encodeURIComponent('403 Forbidden: Access Request');
        const body = encodeURIComponent('I encountered a 403 at: ' + window.location.href + '\n\nTime: ' + new Date().toLocaleString() + '\n\nPlease provide access because: ');
        // change the mailto address to your admin support
        window.location.href = 'mailto:admin@example.com?subject=' + subject + '&body=' + body;
      };

      // Accessibility: focus the main call to action
      const primary = document.getElementById('homeBtn');
      if(primary) primary.focus({preventScroll:true});
    })();
  </script>
