      <div class="actions" role="group" aria-label="Actions">
        <button class="btn btn-primary" onclick="goHome()" id="homeBtn">Go to Home</button>
        <button class="btn btn-ghost" onclick="goBack()" id="backBtn">Go Back</button>
        <button class="btn btn-ghost" onclick="reportIssue()" id="reportBtn" aria-describedby="reportDesc">Report</button>
      </div>

      <div class="meta" aria-hidden="false">
